{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build and Run C++",
        "type": "shell",
        "command": "g++ ${file} -o ${fileDirname}/${fileBasenameNoExtension} && ${fileDirname}/${fileBasenameNoExtension}",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Build and run a C++ file",
        "presentation": {
          "reveal": "always",
          "panel": "shared",
          "echo": true,
          "focus": false,
          "showReuseMessage": true,
          "clear": false
        }
      }
    ]
  }
  